<%= form_for(@post) do |f| %>

  <label>Name</label>
  <%= f.text_field :name %>
  <br>

  <label>Content</label>
  <%= f.text_area :content %>
  <br>
  <label>Tags</label>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <br>


  <%= f.submit %>

<% end %>
